{
    "description": "__MSG_extensionDescription__",
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "version": "2.0.0",
    "homepage_url": "https://github.com/harytfw/GlitterDrag",
    "icons": {
        "128": "/icon/drag.png"
    },
    "author": "harytfw",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "ftp://*/*",
        "storage",
        "tabs",
        "clipboardWrite",
        "downloads",
        "find",
        "search"
    ],
    "background": {
        "scripts": [
            "libs/webextension-polyfill/browser-polyfill.min.js",
            "common/console.js",
            "common/config.js",
            "common/env.js",
            "common/url_util.js",
            "common/file_util.js",
            "background/storage_upgrade.js",
            "background/background.js",
            "background/rewrite_useragent.js"
        ]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "all_frames": true,
            "matches": [
                "http://*/*",
                "https://*/*",
                "ftp://*/*"
            ],
            "js": [
                "libs/DOMPurify/purify.min.js",
                "libs/webextension-polyfill/browser-polyfill.min.js",
                "common/config.js",
                "common/env.js",
                "common/i18n_util.js",
                "common/url_util.js",
                "common/console.js",
                "common/query_util.js",
                "content_scripts/component/range_indicator/range_indicator.js",
                "content_scripts/component/prompt/prompt.js",
                "content_scripts/component/query_window/service/dict_bing.js",
                "content_scripts/component/query_window/service/dict_chinese.js",
                "content_scripts/component/query_window/service/translation_bing.js",
                "content_scripts/component/query_window/service/translation_google.js",
                "content_scripts/component/query_window/window.js",
                "content_scripts/component/grids/grids.js",
                "content_scripts/bridge.js",
                "content_scripts/wrapper.js",
                "content_scripts/core.js",
                "content_scripts/dimension_define.js",
                "content_scripts/storage.js",
                "content_scripts/features.js",
                "content_scripts/cs.js",
                "content_scripts/buttons.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options/index.html",
        "browser_style": false,
        "open_in_tab": true
    },
    "default_locale": "zh_CN",
    "applications": {
        "gecko": {
            "id": "glitterdrag@harytfw",
            "strict_min_version": "63.0"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "glitterdrag@harytfw",
            "strict_min_version": "63.0"
        }
    },
    "web_accessible_resources": [
        "libs/bulma/*",
        "content_scripts/*"
    ]
}